# Telemedicine System - Environment Configuration Template
# Copy this file to .env and update with your actual values

# ==================== MYSQL CONFIGURATION ====================
# For local development with MySQL
DATABASE_TYPE=mysql
DB_HOST=localhost
DB_USER=root
DB_PASS=
DB_NAME=telemedicine
DB_PORT=3306

# ==================== SUPABASE CONFIGURATION ====================
# For cloud deployment with Supabase PostgreSQL
# Uncomment and configure to use Supabase
# DATABASE_TYPE=supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ==================== API CONFIGURATION ====================
API_ENVIRONMENT=development
API_DEBUG=true
API_URL=http://localhost:8000
API_PORT=8000

# ==================== JWT AUTHENTICATION ====================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION=86400

# ==================== SMS GATEWAY CONFIGURATION ====================
# Choose your SMS provider: twilio, local_gateway, or african_operator
SMS_PROVIDER=local_gateway

# Twilio Configuration
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Local Gateway Configuration
LOCAL_GATEWAY_URL=http://localhost:5000/send_sms
LOCAL_GATEWAY_API_KEY=your-local-gateway-key

# African SMS Operator Configuration
AFRICAN_OPERATOR_URL=https://api.operator.com/sms
AFRICAN_OPERATOR_KEY=your-operator-key
AFRICAN_OPERATOR_SENDER_ID=TELEMEDICINE

# ==================== EMAIL CONFIGURATION ====================
MAIL_DRIVER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=465
MAIL_USERNAME=your-mailtrap-username
MAIL_PASSWORD=your-mailtrap-password
MAIL_FROM_ADDRESS=noreply@telemedicine.local
MAIL_FROM_NAME=Telemedicine System

# ==================== LOGGING CONFIGURATION ====================
LOG_LEVEL=info
LOG_PATH=./logs
LOG_MAX_SIZE=10485760
LOG_MAX_FILES=10

# ==================== SCHEDULER CONFIGURATION ====================
SCHEDULER_ENABLED=true
SCHEDULER_INTERVAL=3600
SCHEDULER_LOG_PATH=./logs/scheduler.log
REMINDER_BATCH_SIZE=50

# ==================== SECURITY CONFIGURATION ====================
# CORS Configuration
CORS_ENABLED=true
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,https://yourdomain.com

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# IP Whitelist (optional)
IP_WHITELIST_ENABLED=false
IP_WHITELIST=127.0.0.1,192.168.1.1

# ==================== FEATURES CONFIGURATION ====================
# Real-time Feeds
REALTIME_FEEDS_ENABLED=true
REALTIME_FEEDS_RETENTION_DAYS=90

# SMS Chat
SMS_CHAT_ENABLED=true
SMS_STORAGE_DAYS=90

# Attendance Tracking
ATTENDANCE_TRACKING_ENABLED=true
ATTENDANCE_AUTO_REMINDER_ENABLED=true
ATTENDANCE_REMINDER_DAYS=2

# Reminders
REMINDERS_ENABLED=true
APPOINTMENT_REMINDER_HOURS=24
ABSENCE_REMINDER_DAYS=2

# Audit Logging
AUDIT_LOG_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=365

# ==================== GITHUB CONFIGURATION ====================
GITHUB_REPOSITORY=yourusername/telemedicine
GITHUB_TOKEN=your-github-token
GITHUB_BRANCH=main

# ==================== DEPLOYMENT CONFIGURATION ====================
# Local Development
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost

# Production
# APP_ENV=production
# APP_DEBUG=false
# APP_URL=https://yourdomain.com

# ==================== THIRD-PARTY INTEGRATIONS ====================
# Optional integrations
SENTRY_DSN=
DATADOG_API_KEY=
GOOGLE_ANALYTICS_ID=

# ==================== ADMIN CREDENTIALS ====================
# Default admin user (change these immediately after first login)
ADMIN_EMAIL=admin@telemedicine.local
ADMIN_PASSWORD=change-me-immediately
ADMIN_PHONE=+1234567890

# ==================== SYSTEM CONFIGURATION ====================
SYSTEM_NAME=Telemedicine System
SYSTEM_VERSION=1.0.0
SYSTEM_TIMEZONE=UTC
CURRENCY=USD

# ==================== MAINTENANCE MODE ====================
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=System is under maintenance. Please try again later.
